    <button type="button" class="layui-btn layui-btn-normal" v-on:click="Search" style="margin-top:20px;margin-left:1000px">查询</button>
    <table class="layui-table">
        @*<colgroup>
                <col width="150">
                <col width="150">
                <col width="200">
                <col>
            </colgroup>*@
        <thead>
            <tr>
                <th>订单编号</th>
                <th>客户姓名</th>
                <th>申请金额</th>
                <th>期数</th>
                <th>利率</th>
                <th>申请状态</th>
                <th>提交时间</th>
                <th>用途</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="i in emps">
                <td>{{i.dNo}}</td>
                <td>{{i.dName}}</td>
                <td>{{i.dMoney}}</td>
                <td>{{i.dCount}}</td>
                <td>{{i.dLi}}</td>
                <td>{{i.dSzt==7?"终审中":""}}</td>
                <td>{{i.sdTime}}</td>
                <td>{{i.dTu}}</td>
                <td>
                    <button type="button" class="layui-btn layui-btn-radius" v-on:click="Cha(i.dId)">查看</button>
                    @*<button type="button" class="layui-btn layui-btn-radius" v-on:click="Del(i.sId)">删除</button>
                        <button class="layui-btn layui-btn-radius" data-toggle="modal" data-target="#myModal" v-on:click="Fan(i)">修改</button>*@
