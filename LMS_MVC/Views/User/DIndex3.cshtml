            </tr>
        </tbody>
    </table>
    <table class="table table-bordered" style="text-align:center">
        <tr>
            <td>总共<span>{{PageCount}}</span>条记录</td>
            <td>总共<span>{{PageIndex}}</span>页</td>
            <td>当前第<span>{{PageCurrent}}</span>页</td>
            <td><a href="#" v-on:click="a">首页</a></td>
            <td><a href="#" v-on:click="b">上一页</a></td>
            <td><a href="#" v-on:click="c">下一页</a></td>
            <td><a href="#" v-on:click="d">尾页</a></td>
        </tr>
    </table>
</div>

<script>

    var vn = new Vue({
        el: '#app',
        data: {
            emps: '',
            input1: '',
            PageCurrent: 1,
            PageIndex: 1,
            PageCount: 1,
            aa: '',
            Zt: ''
        },
        //mounted() {
        //    axios
        //           .get('http://localhost:51166/api/User/KeShow')
        //            .then(response => (this.emps = response.data))
        //            .catch(function () {
        //                console.log(error);
        //            });
        //}
        mounted: function () {
            this.Show();
            this.Xia();
        },
        methods: {
            Show: function () {
                var t = this;
                var PageSize = 5;
                axios({
                    method: "get",
                    url: "http://localhost:51166/api/User/DShow3",
                    params: { name: t.input1, PageSize: parseInt(PageSize), PageCurrent: parseInt(t.PageCurrent) }
                })
                    .then(
                        function (i) {
                                t.emps = i.data.lmS_Dings,
                                t.PageCurrent = i.data.pageCurrent,
                                t.PageIndex = i.data.pageIndex,
                                t.PageCount = i.data.pageCount
                        }
                    )
                    .catch(function () {
                        console.log(error);
                    });
            },
            Xia: function () {
                var a = this;
                axios({
                    method: "get",
                    url: "http://localhost:51166/api/User/Zt",
                }).then(function (i) {
                    a.Zt = i.data;
                })
            },
            a: function () {
                //alert(currentPage);
                this.PageCurrent = 1;
                this.Show();
            },
            b: function () {
                //alert(currentPage);
                this.PageCurrent--;
                if (this.PageCurrent < 1) {
                    this.PageCurrent++;
                }
                this.Show();
            },
            c: function () {
                //alert(currentPage);
                this.PageCurrent++;
                if (this.PageCurrent < this.PageIndex) {
                    this.PageCurrent++;
                }
                this.Show();
            },
            d: function () {
                //alert(currentPage);
                this.PageCurrent = this.PageIndex;
                this.Show();
            },
            Search() {
                this.Show();
            },
            //Add() { location.href = "http://localhost:51490/User/AddIndex" },
            Cha(id) { location.href = "/User/XIndex3?id="+id },
        }
    })

</script>







