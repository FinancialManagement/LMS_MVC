
@{
    ViewData["Title"] = "GetLog";
}

<h1>系统日志</h1>

<script src="~/js/vue.js"></script>
<script src="~/js/axios.min.js"></script>
<script src="~/layui-v2.5.6/layui/layui.js"></script>
<link href="~/layui-v2.5.6/layui/css/layui.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div id="div">
    <table class="layui-table">
        <thead>
            <tr>
                <td>操作人</td>
                <td>执行时间</td>
                <td>操作</td>
                <td>请求方法</td>
                <td>执行时长（毫秒）</td>
                <td>执行结果</td>
            </tr>
        </thead>
        <tbody>
            <tr v-for="item in Log">
                <td>{{item.operateUser}}</td>
                <td>{{(item.executionTime||'').split('T')[0]}}</td>
                <td>{{item.operation}}</td>
                <td>{{item.requestMethod}}</td>
                <td>{{item.executionDura}}</td>
                <td>{{item.executionResult}}</td>
            </tr>
        </tbody>
    </table>
</div>

<script type="text/javascript">
    new Vue({
        el: "#div",
        data: {
            Log:""
        },
        mounted: function () {
            this.Show();
        },
        methods: {
            Show: function () {
                axios({
                    method: "get",
                    url: "http://localhost:51166/api/System/GetLog",
                }).then(res => {
                    this.Log = res.data;
                }).catch(err => {
                    console.log(err);
                })
            }
        }
    })
</script>

